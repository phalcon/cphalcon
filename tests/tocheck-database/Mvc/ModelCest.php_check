class ModelCest
{
    public function testModelsCacheSnapshot(IntegrationTester $I)
    {
        $I->wantToTest("Saving snapshot using simple resultset while using modelsCache");

        $I->addServiceToContainer(
            'modelsCache',
            function () {
                return new File(
                    new Data(
                        [
                            'lifetime' => 20,
                        ]
                    ),
                    [
                        'cacheDir' => cacheDir(),
                    ]
                );
            },
            true
        );

        for ($i = 0; $i < 2; $i++) {
            $robot = Robots::findFirst(
                [
                    'cache' => [
                        'key' => 'robots-cache',
                    ],
                ]
            );

            $I->assertInstanceOf(
                Robots::class,
                $robot
            );

            $I->assertNotEmpty(
                $robot->getSnapshotData()
            );

            $I->assertEquals(
                $robot->toArray(),
                $robot->getSnapshotData()
            );

            $I->seeFileFound(
                outputDir('tests/cache/robots-cache')
            );
        }
    }
}
