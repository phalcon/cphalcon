# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true
charset = utf-8
trim_trailing_whitespace = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.sh]
indent_style = tab

[*.zep]
indent_style = tab

[*.c]
indent_style = tab

[*.h]
indent_style = tab

[*.lemon]
indent_style = tab

[*.re]
indent_style = tab
