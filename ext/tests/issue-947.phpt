--TEST--
Radio inputs generated by Tag::radioField have checked-attribute if value is 0 - https://github.com/phalcon/cphalcon/issues/947
--SKIPIF--
<?php include('skipif.inc'); ?>
--FILE--
<?php
$di = new \Phalcon\DI\FactoryDefault();
\Phalcon\Tag::setDI($di);
echo \Phalcon\Tag::radioField(array('test', 'value' => 1, 'checked' => 'checked')), PHP_EOL;
echo \Phalcon\Tag::radioField(array('test', 'value' => 0)), PHP_EOL;
\Phalcon\Tag::setDefault('test', 0);
echo \Phalcon\Tag::radioField(array('test', 'value' => 0)), PHP_EOL;
?>
--EXPECT--
<input checked="checked" name="test" id="test" value="1" type="radio" />
<input name="test" id="test" value="0" type="radio" />
<input name="test" id="test" checked="checked" value="0" type="radio" />
